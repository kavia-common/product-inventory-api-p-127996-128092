# Example environment variables for local development

# Server and logging
APP_NAME=Product Inventory API
LOG_LEVEL=INFO
CORS_ALLOW_ORIGINS=["*"]

# Database
# Leave MYSQL_* empty to use SQLite fallback (inventory.db in project root)
MYSQL_HOST=
MYSQL_PORT=3306
MYSQL_USER=
MYSQL_PASSWORD=
MYSQL_DB=
SQLITE_URL=sqlite:///./inventory.db
SQL_ECHO=false

# Auth
JWT_SECRET_KEY=dev-only-change-this
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Rate limiting
RATE_LIMIT=100/minute

# Webhook signing
WEBHOOK_SIGNATURE_SECRET=dev-only-change-this
